<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:gravity="top|left"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="mobilemad.app.SettingsFragment">

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="2">

    <TableRow android:gravity="left">

      <TextView
        android:layout_marginTop="10dp"
        android:text="POS Location"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"/>

    </TableRow>

    <TableRow android:gravity="left">

      <TextView
        android:id="@+id/lblImageLocation"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="Image Location: "
        android:textAppearance="?android:attr/textAppearanceMedium"/>

      <EditText
        android:id="@+id/txtImageLocation"
        android:layout_span="2"
        android:inputType="text"/>

    </TableRow>

    <TableRow android:gravity="left">

      <TextView
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="Data Location: "
        android:textAppearance="?android:attr/textAppearanceMedium"/>

      <EditText
        android:id="@+id/txtDataLocation"
        android:layout_width="match_parent"
        android:layout_span="2"
        android:inputType="text"/>

    </TableRow>

    <TableRow android:gravity="left">

      <Button
        android:id="@+id/btnDownloadFiles"
        android:layout_marginTop="10dp"
        android:text="Download Files"/>

      <Button
        android:id="@+id/btnDeleteFiles"
        android:layout_marginTop="10dp"
        android:text="Delete Files"/>
    </TableRow>

  </TableLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="10dip">
  </View>

  <View
    android:layout_width="match_parent"
    android:layout_height="5dip"
    android:background="#000000">
  </View>

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow android:gravity="left">

      <TextView
        android:layout_marginTop="10dp"
        android:text="Chat Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"/>

    </TableRow>

    <TableRow
      android:layout_marginTop="10dp"
      android:gravity="left">

      <TextView
        android:gravity="right"
        android:text="NickName:  "
        android:textAppearance="?android:attr/textAppearanceMedium"/>

      <TextView
        android:id="@+id/lblNickName"
        android:text="1234567890"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    </TableRow>

    <TableRow android:gravity="left">

      <TextView
        android:gravity="right"
        android:text="Channel Name:  "
        android:textAppearance="?android:attr/textAppearanceMedium"/>

      <TextView
        android:id="@+id/lblHostChannelName"
        android:text="1234567890"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    </TableRow>

    <TableRow android:gravity="left">

      <TextView
        android:gravity="right"
        android:text="Channel Status:  "
        android:textAppearance="?android:attr/textAppearanceMedium"/>

      <TextView
        android:id="@+id/lblHostChannelStatus"
        android:text="1234567890"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>

  </TableLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="5dip">
  </View>

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/btnSetNickName"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:text="Set NickName"/>

    <Button
      android:id="@+id/btnHostSetName"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:text="Set Channel Name"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/btnHostStart"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:text="Start Channel"/>

    <Button
      android:id="@+id/btnHostStop"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:text="Stop Channel"/>
  </LinearLayout>

  <Button
    android:id="@+id/btnHostQuit"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:text="Quit Application"/>

</LinearLayout>